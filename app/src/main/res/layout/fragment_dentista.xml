<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mx.itesm.edu.tidprueba.Dentista"
    android:columnCount="2"
    android:rowCount="20"
    android:background="@color/background">


    <ImageView
        android:layout_width="88dp"
        android:layout_height="90dp"
        android:id="@+id/imageView6"
        android:layout_row="0"
        android:layout_column="0"
        android:src="@drawable/ic_action_mident"
        android:layout_gravity="right"
        android:layout_columnSpan="1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/MiDent"
        android:id="@+id/textView2"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_gravity="center"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textColor="#ffffffff" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:background="#ff022a38"
        />

    <Space
        android:layout_width="40px"
        android:layout_height="40px"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_columnSpan="2" />

    <TextView
        android:layout_width="349dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Contacto"
        android:id="@+id/textView12"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:textColor="#ffffffff"
        android:textSize="30dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Dra. Aida Gamboa"
        android:id="@+id/textView13"
        android:layout_row="6"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:textSize="25dp"
        android:textAlignment="center" />

    <TextView
        android:layout_width="349dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Teléfono"
        android:id="@+id/textView15"
        android:layout_row="11"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:textSize="30dp"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="(0155)55323678"
        android:id="@+id/textView18"
        android:layout_row="12"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:textSize="25dp" />

    <TextView
        android:layout_width="349dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Dirección"
        android:id="@+id/textView16"
        android:layout_row="14"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:textSize="30dp"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Oriente 183 No. 47 El Prado, Iztapalapa"
        android:id="@+id/textView20"
        android:layout_row="16"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:textSize="20dp" />



</GridLayout>
